<link rel="stylesheet" href="../style.css">

<div class="form-group">
    <label for="title" style="margin-top: -10px;" class="form-text">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
    <label for="description" style="margin-top: 30px;" class="form-text">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-sm-6">
            <label for="markdown" style="margin-top: 30px;" class="form-text">Content</label>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-10">
                    <div class="form-text" style="margin-top: 35px; font-size: 15px; text-align: right; color: #17a2b8">
                        Supports Markdown!</div>
                </div>
                <div class="col-sm-2">
                    <a href="https://www.markdownguide.org/cheat-sheet/" target="_blank"
                        class="btn btn-info bi bi-info-lg btn-sm" style="margin-top: 30px;"></a>
                </div>
            </div>
        </div>
    </div>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<div class="form-group">
    <label for="cover" style="margin-top: 30px;" class="form-text">Cover image URL</label>
    <input value="<%= article.cover %>" type="text" name="cover" id="cover" class="form-control">
</div>

<div class="row container-fluid" style="width: 50%; margin: 0 auto">
    <a href="/" class="btn button-blog" style="background-color: #b9adae;">Discard</a>
    <button type="submit" class="btn button-blog" style="background-color: #a2c177; width: 150px;">Save</button>
</div>